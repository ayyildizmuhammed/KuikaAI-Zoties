{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": false,
        "types": [
            "./Server/Types"
        ]
    },
    "include": [
        "Server/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}